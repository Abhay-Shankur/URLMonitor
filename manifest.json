{
  "manifest_version": 3,
  "name": "URL Monitor",
  "version": "1.0",
  "description": "Monitors URLs and communicates with Flask server",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/default.png",
      "48": "images/default.png",
      "128": "images/default.png"
    }
  },
  "icons": {
    "16": "images/default.png",
    "48": "images/default.png",
    "128": "images/default.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
